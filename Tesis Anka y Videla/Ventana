import sys
from PyQt5.QtWidgets import QApplication, QWidget, QVBoxLayout, QPushButton, QListWidget

class MainWindow(QWidget):
    def __init__(self):
        super().__init__()
        self.setWindowTitle("Catalogo de Videojuegos ")   
        self.setGeometry(200, 200, 500, 500)               

        # Layout principal
        self.layout = QVBoxLayout()

        # Botones y lista
        self.btn_cargar = QPushButton("Cargar Juegos")
        self.lista_juegos = QListWidget()

        # Agregamos widgets al layout
        self.layout.addWidget(self.btn_cargar)
        self.layout.addWidget(self.lista_juegos)

        # Configuramos el layout a la ventana
        self.setLayout(self.layout)

if __name__ == "__main__":
    app = QApplication(sys.argv)
    ventana = MainWindow()
    ventana.show()
    sys.exit(app.exec_())